@model  IEnumerable<string>
@Html.ActionLink("Домой", "List", "Game", null, new { @class = "btn btn-block btn-lg border" })

@foreach (var link in Model)
{
    @Html.RouteLink(link, new
    {
        controller = "Game",
        action = "List",
        category = link,
        page = 1
    }, new
    {
        @class = "btn btn-block btn-lg border"
    + (link == ViewBag.SelectedCategory ? " btn-primary" : "")
    })

}
